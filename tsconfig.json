{
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "newLine": "lf",
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "lib": [
      "dom",
      "es7"
    ],
    "baseUrl": ".",
    "paths": {
      "@const": [
        "src/constants.ts"
      ],
      "@app": [
        "src/app/index.ts"
      ]
    }
  }
}