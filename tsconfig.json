{
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "strict": true,
    "newLine": "lf",
    "removeComments": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "noEmitOnError": true,
    "typeRoots": [
      "./types",
      "./node_modules/@types"
    ],
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "baseUrl": ".",
    "paths": {
      "@const": [
        "src/constants.ts"
      ],
      "@app": [
        "src/app/index.ts"
      ]
    }
  }
}